[colors]
background = #282828
foreground = #d8d8d8
foreground-alt= #e8e8e8
black = #282828
red = #ab4642
green = #a1b56c
orange = #f7ca88
blue = #7cafc2
magenta = #ba8baf
cyan = #86c1b9
lightgray = #585858
darkgray = #383838
white = #f8f8f8

[global/wm]
margin-top = 3
margin-bottom = 3


[bar/bottom]
monitor = eDP-1
bottom = true

width = 100%
height = 27

;font-N = <fontconfig pattern>;<vertical offset>
;font-0 = Terminus:pixelsize=12;0
;font-1 = Terminus:fontformat=truetype:size=12:antialias=false;0
;font-2 = FontAwesome:pixelsize=10;0
;font-3 = MaterialDesignIcons:size=11;0
font-0 = xos4\ Terminus:pixelsize=18:weight=bold:antialias=false;1
font-1 = FontAwesome:pixelsize=14;1

background = ${colors.background}
foreground = ${colors.foreground}

;spacing = 3

modules-left = powermenu i3 xwindow
modules-center = calendar clock
modules-right = volume filesystem wireless-network wired-network battery

scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev

;systray icons
tray-position = right
tray-padding = 1
tray-transparent = false
tray-background = ${colors.background}
tray-detached = false
tray-offset-x = 1
tray-offset-y = -1
tray-scale = 1.0


[module/xwindow]
type = internal/xwindow

label = %title%
label-maxlen = 128

format-foreground = ${colors.background}
format-background = ${colors.magenta}
format-prefix = " "
format-suffix = " "

format-margin = 1

[module/keyboard]
type = internal/xkeyboard

format =  <label-layout>
format-foreground = ${colors.magenta}
format-label-prefix= " "

[module/clock]
type = internal/date

interval = 1.0

time = %H:%M:%S

format = %{T1} <label>
format-prefix = " "
format-foreground = ${colors.white}

label = %time%

[module/calendar]
type = internal/date

interval = 1.0

date = %Y-%d-%m

format = %{T1} <label>
format-foreground = ${colors.white}
format-prefix = " "

label = %date%

[module/volume]
type = internal/volume
master-mixer = Master

format-volume-foreground = ${colors.cyan}

format-volume = %{T1} <label-volume>

format-volume-prefix = " "
format-muted-prefix = " "

label-muted =  [mute] 
label-muted-foreground = ${colors.blue}
label-muted-font = 1

[module/powermenu]
type = custom/menu

format-prefix = " "

label-open = "   "
label-open-foreground = ${colors.cyan}
label-close = "   "
label-close-foreground = ${colors.red}
label-separator = "  "
label-separator-foreground = ${colors.foreground-alt}

menu-0-0 = reboot
menu-0-0-exec = menu-open-1
menu-0-1 = power off
menu-0-1-exec = menu-open-2
menu-0-2 = log out
menu-0-2-exec = menu-open-3

menu-1-0 = cancel
menu-1-0-exec = menu-open-0
menu-1-1 = reboot
menu-1-1-exec = sudo reboot

menu-2-0 = power off
menu-2-0-exec = sudo poweroff
menu-2-1 = cancel
menu-2-1-exec = menu-open-0

menu-3-0 = log out
menu-3-0-exec = i3-msg exit
menu-3-1 = cancel
menu-3-1-exec = menu-open-0

[module/battery]
type = internal/battery

full-at = 98

battery = BAT0
adapter = AC0

poll-interval = 5

time-format = %H:%M

label-charging = %percentage%%
label-discharging = %percentage%%
label-full = 

format-charging = <animation-charging> <label-charging>
format-charging-foreground = ${colors.orange}

format-discharging = <ramp-capacity> <label-discharging>
format-discharging-foreground = ${colors.foreground}

format-full-foreground = ${colors.green}

format-charging-prefix = "  "
format-discharging-prefix = "⚡ "
format-full-prefix = "   "

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 

animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-4 = 
animation-charging-framerate = 750

[module/i3]
type = internal/i3
format = <label-state> <label-mode>

index-sort = true
wrapping-scroll = true

label-focused = %index%
label-focused-foreground = ${colors.background}
label-focused-background = ${colors.foreground-alt}
label-focused-padding = 1

label-unfocused = %index%
label-unfocused-padding = 1

label-urgent = %index%
label-urgent-foreground = ${colors.background}
label-urgent-background = ${colors.red}
label-urgent-padding = 1

label-visible = %index%
label-visible-padding = 1

[module/wireless-network]
type = internal/network
interface = wlp4s0

format-connected-prefix = " "
format-disconnected-prefix = " "

format-connected = <label-connected>

format-disconnected = <label-disconnected>

label-connected =  %quality%% %essid% %local_ip%
label-connected-foreground = ${colors.green}

label-disconnected =  [not connected]
label-disconnected-foreground = ${colors.red}

[module/wired-network]
type = internal/network
interface = enp0s31f6

format-connected-prefix = " "
format-disconnected-prefix = " "

format-connected = <label-connected>

format-disconnected = <label-disconnected>

label-connected =  %local_ip%
label-connected-foreground = ${colors.foreground-alt}

label-disconnected =  
label-disconnected-foreground = ${colors.red}

[module/filesystem]
type = internal/fs
interval = 25

mount-0 = /
;mount-1 = /boot

;label-mounted = " %mountpoint%: %free% "
label-mounted = "   %free% "
;label-mounted = %mountpoint%: %percentage_free%% of %total%
label-mounted-foreground = ${colors.magenta}
label-unmounted = " %mountpoint% not mounted "
label-unmounted-foreground = ${colors.magenta}
